                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:elevation="100dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/xmlTiHorarioDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Horario:"
                        android:textColor="@color/md_black_1000"
                        android:textColorHint="@color/md_blue_900" />

                    <TextView
                        android:id="@+id/xmlTvMostrarHorarioDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Matutino y Diurno"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTiJornadaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jornada de trabajo:"
                        android:textColor="@color/md_black_1000" />


                    <TextView
                        android:id="@+id/xmlTvJornadaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Completa"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTiTipoContratoDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Contrato:"
                        android:textColor="@color/md_black_1000" />


                    <TextView
