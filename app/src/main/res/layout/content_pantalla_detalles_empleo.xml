                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sexo Requerido:"
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/xmlTvSexoRequeridoDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Masculino"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTiRangoEdadDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rango Edad:"
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/xmlTvRangoEdadDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="18-25 A単os"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/xmlTiNotaDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Nota"
                android:textColor="@color/md_white_1000"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:elevation="100dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/xmlTvNotaDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Otros Requisitos, Beneficios, Notas, Aviso, Etc."
                    android:textColor="@color/md_blue_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/xmlTiEstadoEmpleoDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estado Actual:"
                android:textColor="@color/md_white_1000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/xmlTvEstadoEmpleoDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/md_blue_900"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/xmlBtnAplicarEmpleoDE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Aplicar"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/xmlTvYaaplicasteDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Usted ya aplico Anteriormente a este empleo."
            android:textColor="@color/md_red_500"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xmlTvFechaPublicacionDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Ultima Actualizacion: 29/04/2019"
            android:textColor="@color/md_white_1000"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

