<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:radius="20dp">

            <TextView
                android:id="@+id/textViewInstitucionOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nombre Institucion"
                android:textColor="@color/md_blue_900"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewAreaoTemaOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area o Tema"
                android:layout_below="@+id/textViewInstitucionOC"
                android:textColor="@color/md_blue_900"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewNivelEstudioOC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAreaoTemaOC"
                android:hint=" Tipo Estudio "
                android:layout_marginLeft="20dp"
                android:textSize="20sp"

                android:textColor="@color/md_blue_900"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="italic" />


                <!--   android:textColorHint="@color/md_blue_900"
-->

            <TextView
                android:id="@+id/textViewAnoOC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAreaoTemaOC"
                android:layout_toRightOf="@+id/textViewNivelEstudioOC"
                android:hint="AÃ±o "
                android:textSize="20sp"
                android:textColor="@color/md_blue_900"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="italic"  />


            <TextView
                android:id="@+id/textViewPriceENR545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="180dp"
                android:textSize="15sp"
                android:layout_below="@id/textViewAnoOC"
                android:hint=" Otros Estudios "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>