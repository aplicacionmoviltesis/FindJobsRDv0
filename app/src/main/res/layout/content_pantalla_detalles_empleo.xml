                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTvAreaAviso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Click en el area, Para ver mas detalles."
                        android:textColor="@color/md_blue_grey_400"
                        android:textSize="10sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/xmlTiAnosExperienciaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A単os Experiencia:"
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/xmlTvAnosExperienciaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="3 A単os"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTiFormacionAcademicaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formacion Academica Minima:"
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/xmlTvFormacionAcademicaDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Ninguna"
                        android:textColor="@color/md_blue_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmlTiIdiomasDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Idiomas:"
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/xmlTvIdiomasDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
