<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/accent"
    android:clickable="true"
    android:elevation="100dp"
    android:orientation="vertical"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Nombre documento"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/xmlTVNombreDocumentoVerifEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="@color/md_blue_900"
            android:textColorHint="@color/md_blue_900"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Estado empleador"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/xmlTVEstadoVerifEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Estado"
            android:inputType="textPersonName"
            android:textColor="@color/md_blue_900"
            android:textColorHint="@color/md_blue_900"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Fecha"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/xmlTVFechaVerifEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Fecha"
            android:inputType="date"
            android:textColor="@color/md_blue_900"
            android:textColorHint="@color/md_blue_900"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView>