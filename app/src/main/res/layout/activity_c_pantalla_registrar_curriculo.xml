<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_blue_500">
            <TextView
                android:id="@+id/xmlTituloCurriculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Currículo de Vida"
                android:textStyle="italic"
                android:textColor="@color/md_white_1000"
                android:textSize="30sp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/xmlImageViewimagenenelCurriculo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/transparent"
                android:padding="2dp"
                android:src="@mipmap/onlylogo"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp">






            <TextView
                android:id="@+id/xmlTiDatosPersonalesC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Datos Personales"
                android:textColor="@color/md_blue_900"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarCedula"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etcedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Cédula"
                        android:inputType="number"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarnombre"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etnombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="30"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarApellido"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etapellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="50"
                        android:hint="Apellido"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarEmail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    android:layout_margin="5dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="E-mail"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/xmlbregistrarTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="@color/md_blue_900"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        android:layout_marginStart="5dp"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:counterTextAppearance="@style/Counter"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/CounterOverFlow"
                        app:hintAnimationEnabled="true">

                        <EditText
                            android:id="@+id/ettelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="Teléfono"
                            android:inputType="phone"
                            android:textColor="@color/md_blue_900" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/xmlbregistrarCelular"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="@color/md_blue_900"
                        app:counterEnabled="true"
                        android:layout_marginEnd="5dp"
                        app:counterMaxLength="10"
                        app:counterOverflowTextAppearance="@style/CounterOverFlow"
                        app:counterTextAppearance="@style/Counter"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/CounterOverFlow"
                        app:hintAnimationEnabled="true">

                        <EditText
                            android:id="@+id/etcelula"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="Celular"
                            android:inputType="number"
                            android:textColor="@color/md_blue_900" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/xmlTiProvinciaAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Provincia"
                        android:textColor="@color/md_blue_900"
                        android:textSize="15sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerprovincias"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:baselineAligned="false"
                        android:dropDownSelector="@color/gradStop"
                        android:hint="Provincia"
                        android:textColorHint="@color/md_blue_900"
                        app:met_floatingLabel="normal" />

                    <TextView
                        android:id="@+id/xmlTiEstadoCivilAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Estado Civil"
                        android:textColor="@color/md_blue_900"
                        android:textSize="15sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerestadocivil"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:dropDownSelector="@color/gradStop"
                        android:entries="@array/EstadoCivil"
                        android:hint="Estado Civil"
                        android:textColorHint="@color/md_blue_900"
                        app:met_floatingLabel="normal" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etdireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Dirección"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlbregistrarocupacion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/etocupacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ocupación"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/textVieklwTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Idiomas"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/md_blue_900" />

                    <TextView
                        android:id="@+id/tvop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textVieklwTitle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="25dp"
                        android:hint="Español/English"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/md_blue_900"
                        android:textColorHint="@color/md_blue_grey_400" />

                    <Button
                        android:id="@+id/xmlBtnIdioma"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/tvop"
                        android:onClick="onButtonClicked"
                        android:padding="0dp"
                        android:text="Selecionar Idiomas" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/xmlTiGradoMayorAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Grado Mayor"
                        android:textColor="@color/md_blue_900"
                        android:textSize="15sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnergradomayor"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:baselineAligned="false"
                        android:dropDownSelector="@color/gradStop"
                        android:entries="@array/GradoMayor"
                        android:hint="Grado Académico"
                        android:textColorHint="@color/md_blue_900"
                        app:met_floatingLabel="normal" />

                    <TextView
                        android:id="@+id/xmlTiEstadoActualAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Estado Laboral Actual"
                        android:textColor="@color/md_blue_900"
                        android:textSize="15sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerestadoactual"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:dropDownSelector="@color/gradStop"
                        android:entries="@array/EstadoActual"
                        android:hint="Estado Actual"
                        android:textColorHint="@color/md_blue_900"
                        app:met_floatingLabel="normal" />

                    <TextView
                        android:id="@+id/xmlTiSexoAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Sexo"
                        android:textColor="@color/md_blue_900"
                        android:textSize="15sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnersexo"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:baselineAligned="false"
                        android:dropDownSelector="@color/gradStop"
                        android:entries="@array/InfoSexo"
                        android:hint="Sexo"
                        android:textColorHint="@color/md_blue_900"
                        app:met_floatingLabel="normal" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/habilidadesyconocimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/md_blue_900"
                    app:counterEnabled="true"
                    app:counterMaxLength="300"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/CounterOverFlow"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/ethabilidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Habilidades"
                        android:inputType="text"
                        android:maxLines="3"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Fecha de Nacimiento"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/md_blue_900" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewTitle"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:hint="30/01/1997"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/md_blue_900"
                        android:textColorHint="@color/md_blue_900" />

                    <Button
                        android:id="@+id/btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/textViewTitle"
                        android:layout_toRightOf="@id/tv"
                        android:background="@drawable/ic_cake_black_24dp"
                        android:onClick="onButtonClicked"
                        android:padding="0dp" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/xmlTituloAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/xmlbregistrarFechafinEL"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Áreas de Trabajo"
                android:textColor="@color/md_blue_900"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/AreaPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xmlbregistrarFechafinEL"
                    android:inputType="textPersonName"
                    android:text="Area Principal"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/md_blue_900"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/xmlspinAreaPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:baselineAligned="false"
                    android:dropDownSelector="@color/gradStop"
                    android:hint="Área Principal"
                    android:textColorHint="@color/md_blue_900" />

                <TextView
                    android:id="@+id/AreaSecundaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xmlbregistrarFechafinEL"
                    android:inputType="textPersonName"
                    android:layout_marginStart="5dp"
                    android:text="Área Secundaria"
                    android:textColor="@color/md_blue_900"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/xmlspinAreaSecundario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:baselineAligned="false"
                    android:dropDownSelector="@color/gradStop"
                    android:hint="Área Secundaria"
                    android:textColorHint="@color/md_blue_900" />

                <TextView
                    android:id="@+id/AreaTerciaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xmlbregistrarFechafinEL"
                    android:inputType="textPersonName"
                    android:text="Área Terciaria"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/md_blue_900"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/xmlspinAreaTerciaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:baselineAligned="false"
                    android:dropDownSelector="@color/gradStop"
                    android:hint="Área Terciaria"
                    android:textColorHint="@color/md_blue_900" />

            </LinearLayout>

            <TextView
                android:id="@+id/xmlTituloFormacionAcademica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/xmlbregistrarFechafinEL"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Formación Académica"
                android:textColor="@color/md_blue_900"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_bg"
                android:orientation="vertical"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlTiNivelPrimarioNameFA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/md_blue_900">

                    <EditText
                        android:id="@+id/xmlEditNivelPrimarioNameFA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:ems="10"
                        android:hint="Nivel Primario"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlTiNivelSecundarioNameFA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/md_blue_900">

                    <EditText
                        android:id="@+id/xmlEditNivelSecundarioNameFA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:ems="10"
                        android:hint="Nivel Secundario"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/xmlTiCarreraNameFA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/md_blue_900">

                    <EditText
                        android:id="@+id/xmlEditCarreraNameFA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:ems="10"
                        android:hint="Carrera Universitaria"
                        android:inputType="text"
                        android:textColor="@color/md_blue_900" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/md_blue_900"
                    android:text="Universidad" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/xmlspinUniversidadFormAcad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:baselineAligned="false"
                    android:dropDownSelector="@color/gradStop"
                    android:hint="Universidad"
                    android:textColorHint="@color/md_blue_900" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/xmlBtnActualizarGC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/transparent"
                    android:hint="Actualizar"
