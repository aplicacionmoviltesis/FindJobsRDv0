<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/accent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:elevation="100dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:radius="25dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CardImageArea"
            android:layout_width="150sp"
            android:layout_height="140dp"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:radius="20dp"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CardNombreempleo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:textColor="@color/md_blue_900"
                android:textSize="20sp"
                android:text="Nombre Empleo" />
            <TextView
                android:id="@+id/CardNombreempresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textStyle="italic"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:text="Nombre Empresa" />
            <TextView
                android:id="@+id/CardProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textStyle="bold"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:text="Provincia" />

            <TextView
                android:id="@+id/Cardarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textStyle="italic"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:text="Area" />

            <TextView
                android:id="@+id/CardEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textStyle="bold"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:text="Estado" />

            <TextView
                android:id="@+id/CardFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900"
                android:textSize="10sp"
                android:text="Fecha" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>