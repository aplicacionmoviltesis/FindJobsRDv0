<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewNombreC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="NOMBRE "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textColorHint="@color/md_black_1000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewCedulaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNombreC"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:hint="Cedula"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColorHint="@color/md_black_1000"
                android:textSize="15sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDireccionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCedulaC"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:hint="Direccion"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textColorHint="@color/md_black_1000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewEstadoActualCurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDireccionC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:hint=" Estado Actual"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHint="@color/md_black_1000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMaestriaC"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDireccionC"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textViewEstadoActualCurr"
                android:hint="Maestria"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHint="@color/md_black_1000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProvinciaC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewEstadoActualCurr"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint=" (Provincia) "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHint="@color/md_black_1000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPriceENR545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewProvinciaC"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:hint=" Inf. Bas. Curriculo "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHint="@color/md_black_1000"
                android:textSize="15sp" />

        </RelativeLayout>

</androidx.cardview.widget.CardView>
