<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    android:orientation="vertical"
    tools:context=".Pantallas_CurriculosCompleto.PantallaRegistroBuscador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xmlregistrarnombreAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="30"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            android:textColorHint="@color/md_white_1000">

            <EditText
                android:id="@+id/xmleditRegistrarnombreAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:textColor="@color/md_white_1000"
                android:inputType="text"
                android:hint="Nombre"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xmlregistrarApellidoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="9"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            android:textColorHint="@color/md_white_1000">

            <EditText
                android:id="@+id/xmleditRegistrarApellidoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:textColor="@color/md_white_1000"
                android:hint="Apellido"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/xmlregistraremailAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="30"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            android:textColorHint="@color/md_white_1000">

            <EditText

                android:id="@+id/xmleditregistraremailAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/md_white_1000"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xmlregistrartelefonoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="10"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            android:textColorHint="@color/md_white_1000">

            <EditText
                android:id="@+id/xmleditregistrartelefonoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_phone_white_24dp"
                android:drawablePadding="10dp"
                android:inputType="phone"
                android:textColor="@color/md_white_1000"
                android:hint="Telefono"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xmlregistrarcontrasenaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_white_1000"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="30"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/md_white_1000">

            <EditText
                android:id="@+id/xmleditregistrarcontrasenaAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/md_white_1000"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Contraseña"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xmlconfirmarcontrasenaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_white_1000"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/CounterOverFlow"
            app:counterMaxLength="30"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/Counter"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/common_google_signin_btn_text_dark">

            <EditText
                android:id="@+id/xmleditconfirmarcontrasenaAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/md_white_1000"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Repetir Contraseña"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/xmlbtnRegistrarBuscadorAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/md_white_1000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Crear Admininistrador" />

    <ProgressBar
        android:id="@+id/progressBarRegistroAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</android.widget.LinearLayout>