<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xmlTituloReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="40sp"
            android:textColor="@color/md_blue_900"
            android:text="Referencias"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:inputType="numberDecimal"
            android:text="  Nombre"
            android:textColor="@color/md_blue_900"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVNombreDetalleReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:dropDownSelector="@color/gradStop"
                android:completionHintView="@color/md_blue_900"
                android:textColor="@color/md_blue_900"
                android:hint="Nombre"
                android:textColorHint="@color/md_blue_900"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:inputType="numberDecimal"
            android:text="  Cargo ocupado"
            android:textColor="@color/md_blue_900"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVCargoOcupadoDetalleReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:dropDownSelector="@color/gradStop"
                android:completionHintView="@color/md_blue_900"
                android:textColor="@color/md_blue_900"
                android:hint="Cargo ocupado"
                android:textColorHint="@color/md_blue_900"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:inputType="numberDecimal"
            android:text="  Institucion"
            android:textColor="@color/md_blue_900"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVInstitucionDetalleReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:dropDownSelector="@color/gradStop"
                android:completionHintView="@color/md_blue_900"
                android:textColor="@color/md_blue_900"
                android:hint="Institucion"
                android:textColorHint="@color/md_blue_900"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:inputType="numberDecimal"
            android:text="  Telefono"
            android:textColor="@color/md_blue_900"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVTelefonoDetalleReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:dropDownSelector="@color/gradStop"
                android:completionHintView="@color/md_blue_900"
                android:textColor="@color/md_blue_900"
                android:hint="Telefono"
                android:textColorHint="@color/md_blue_900"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>