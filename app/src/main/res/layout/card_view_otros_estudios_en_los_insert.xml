<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewInstitucionOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nombre Institucion"
                android:textColorHint="@color/md_black_1000"
                android:gravity="center"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewAreaoTemaOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Area o Tema"
                android:layout_below="@+id/textViewInstitucionOC"
                android:gravity="center"
                android:textSize="20sp"
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewNivelEstudioOC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAreaoTemaOC"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="25dp"
                android:hint=" Tipo Estudio "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAnoOC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAreaoTemaOC"
                android:layout_toRightOf="@+id/textViewNivelEstudioOC"
                android:layout_marginLeft="75dp"
                android:hint="AÃ±o "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewPriceENR545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_below="@id/textViewAnoOC"
                android:hint=" Otros Estudios "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>