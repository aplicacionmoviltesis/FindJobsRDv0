<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Clases_EmpleoCompleto.PantallaAplicarVerificacionEmpleador">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/onlylogo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir Archivo"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/NombreArchivoVerEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribir nombre"
        android:textSize="25dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnRegistrarArchivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Registrar Archivo"
        android:background="@drawable/btn_bg"
        android:textSize="20sp"/>

</LinearLayout>