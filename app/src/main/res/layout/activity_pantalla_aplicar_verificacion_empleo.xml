<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Clases_EmpleoCompleto.PantallaAplicarVerificacionEmpleador">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/onlylogo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar Solicitud, para Verificacion Empleadore "
        android:textSize="30sp"
        android:textColor="@color/md_blue_900"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/NombreArchivoVerEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Empresa"
        android:textColor="@color/md_blue_900"
        android:textColorHint="@color/md_blue_grey_400"
        android:textSize="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Certificación de la DGII"
        android:textSize="20sp"
        android:textColor="@color/md_blue_grey_400"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnRegistrarArchivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Adjuntar Certificación"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_archivo_dgii"
        android:background="@color/transparent"
        android:textSize="20sp"/>

</LinearLayout>