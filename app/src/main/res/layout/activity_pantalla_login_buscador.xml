<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="176dp"
                android:src="@mipmap/onlylogo" />

            <TextView
                android:id="@+id/xmlbtvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:textColor="@color/md_white_1000"
                android:textSize="40dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="Correo Electronico"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entrada_correoLogin"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="text"
                android:padding="10dp"
                android:paddingStart="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/md_blue_grey_400"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:text="Contraseña"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/md_blue_grey_400"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textolvidoContrasenal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:layout_marginEnd="50dp"
                    android:padding="5dp"
                    android:shadowColor="@color/md_blue_grey_900"
                    android:text="Recuperar Contraseña"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold" />


            </LinearLayout>

            <Button
                android:id="@+id/EbtnIniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:shadowColor="@color/md_white_1000"
                android:text="Iniciar Sesion"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>