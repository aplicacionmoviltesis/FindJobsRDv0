        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/xmlTvNombreEmpleoDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="3dp"
                android:hint="Nombre Empleo"
                android:textColor="@color/md_white_1000"
                android:textSize="45sp"
                android:textStyle="bold|italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/xmlTvNombreEmpresaDE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:hint="Nombre Empresa"
                    android:textColor="@color/md_white_1000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/xmlBtnVerificacionEmpresaDE"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/xmlTvNombreEmpresaDE"
                    android:background="@drawable/cuentaverificada"
                    android:textColor="@color/md_blue_900" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_bg"
                android:elevation="100dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                <TextView
                    android:id="@+id/xmlTiDireccionDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direccion:"
                    android:textColor="@color/md_black_1000" />

                <TextView
                    android:id="@+id/xmlTvDireccionDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="Direccion"
                    android:textColor="@color/md_blue_900"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xmlTiProvinciaDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provincia:"
                    android:textColor="@color/md_black_1000" />

                <TextView
                    android:id="@+id/xmlTvProvinciaDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Provincia"
                    android:textColor="@color/md_blue_900"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xmlTvProvinciaAviso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Click en la provinvia, Para ver mas detalles."
                    android:textColor="@color/md_blue_grey_400"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/xmlTiContactoDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo Electronico:"
                    android:textColor="@color/md_black_1000"
                    android:textColorHint="@color/md_blue_900" />

                <TextView
                    android:id="@+id/xmlTvEmailDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="Email"
                    android:textColor="@color/md_blue_900"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xmlTiTelefonoDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:textColor="@color/md_black_1000"
                    android:textColorHint="@color/md_blue_900" />

                <TextView
                    android:id="@+id/xmlTvTelefonoDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="Telefono"
                    android:textColor="@color/md_blue_900"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xmlTiPaginaWebDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pagina Web:"
                    android:textColor="@color/md_black_1000"
                    android:textColorHint="@color/md_blue_900" />

                <TextView
                    android:id="@+id/xmlTvPaginaWebDE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Pagina Web"
                    android:textColor="@color/md_blue_900"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
