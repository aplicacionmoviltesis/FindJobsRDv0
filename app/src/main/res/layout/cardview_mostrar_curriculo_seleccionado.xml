<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/accent"
    android:clickable="true"
    android:elevation="100dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:radius="25dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CardImageAreaComp"
            android:layout_width="90sp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:contentDescription="TODO"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="2dp"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:radius="20dp">

            <TextView
                android:id="@+id/textViewNombreCComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nombre Persona"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCedulaCComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Cedula "
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewDireccionCComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Direccion"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEstadoActualCurrComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Estado actual"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewMaestriaCComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Maestria"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProvinciaCComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Provincia"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900"
                android:textSize="10sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textViewPriceENR545"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Fecha"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900"
                android:textSize="10sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSelectComp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/ic_empleos_aplico"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>



