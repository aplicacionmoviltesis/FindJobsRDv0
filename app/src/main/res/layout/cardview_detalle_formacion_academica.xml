<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:text="  Nivel Primario"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVprimerNivelDetalleFormAcad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Nivel Primario"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="25sp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text="  Nivel Secundario"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVSegundoNivelDetalleFormAcad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Nivel Secunadio"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="25sp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text="  Nivel Superior"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVNivelSuperiorDetalleFormAcad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Nivel Superior"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="25sp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text="Carrera"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVCarreraDetalleFormAcad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Carrera"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="25sp"
                android:textStyle="italic" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>