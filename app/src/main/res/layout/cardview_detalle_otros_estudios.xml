<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content "
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_bg"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text=" Institucion"
            android:textColorHint="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVInstitucionDetalleOtrosEstudios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Institucion"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="20sp"
                android:textStyle="italic"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text=" Año"
            android:textColorHint="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVanoDetalleOtrosEstudios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="año"
                android:layout_marginLeft="25dp"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="20sp"
                android:textStyle="italic"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text=" Area o Tema"
            android:textColorHint="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVAreaoTemaDetalleOtrosEstudios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Area o tema"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="20sp"
                android:textStyle="italic"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmlbregistrarFechafinEL"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:text=" Tipo de estudio"
            android:textColorHint="@color/md_black_1000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/md_blue_900">

            <TextView
                android:id="@+id/xmlTVTipodeEstudioDetalleOtrosEstudios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:completionHintView="@color/md_blue_900"
                android:dropDownSelector="@color/gradStop"
                android:hint="Tipo de estudio"
                android:textColor="@color/md_blue_900"
                android:textColorHint="@color/md_blue_900"
                android:textSize="20sp"
                android:textStyle="italic"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>