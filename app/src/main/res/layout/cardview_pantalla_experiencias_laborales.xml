<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NOMBRE EMPRESA"
                android:textColorHint="@color/md_black_1000"
                android:gravity="center"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:textColorHint="@color/md_black_1000"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:hint="809-725-2584"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/cargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="CARGO"
                android:layout_below="@+id/textViewShortDesc"
                android:gravity="center"
                android:textSize="20sp"
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargo"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="25dp"
                android:hint=" 15/15/2015 "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewPriceENR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargo"
                android:layout_toRightOf="@+id/textViewPrice"
                android:layout_marginLeft="75dp"
                android:hint="15/15/2015 "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPriceENR54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textViewPrice"
                android:hint=" (10 AÃ±os) "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPriceENR545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_below="@id/textViewPriceENR54"
                android:hint=" Experiancia Laboral "
                android:textColorHint="@color/md_black_1000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>